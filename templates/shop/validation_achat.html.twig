{% extends 'base.html.twig' %}

{% block title %}Magasin | Save it !
{% endblock %}

{% block styles %}
	<link rel="stylesheet" href="{{ asset('assets/styles/shop2.css') }}">
{% endblock %}

{% block body %}

	<main>
		<div class="confirmation confShow">
			<h1>CONFIRMER L'ACHAT</h1>
			<div class="image-nomItem-prix-Fond">
				<img id="imgConfirm" src="" alt="blabla">
				<div class="nomItem-prix">
					<p>{{ accessoire.nomAccessoire }}</p>
					<p id="prixItemSelect">
						{{ accessoire.prixAccessoire }}
						ðŸª™</p>
				</div>
			</div>

			<div class="boutons">
				<a href="{{ path('app_shop_type', {'type': type}) }}">
					<button id="btnAnnuler" class="btn2" type="submit">Annuler</button>
				</a>
				{% if argentPossede < accessoire.prixAccessoire %}
					<p>Tu n'as pas assez d'argent, il te manque
						{{(accessoire.prixAccessoire - argentPossede) }}
						ðŸª™</p>
				{% else %}
					<form action="{{ path('app_shop_achat', {'type': type, 'id': id}) }}" method="POST">
						<input type="hidden" name="_token" value="{{ csrf_token('acheter' ~ accessoire.id) }}">
						<p id="argentRestant">Il te restera
							{{ argentPossede - accessoire.prixAccessoire }}
							ðŸª™</p>
						<button id="btnConfirm" class="btn1" type="submit">Confirmer</button>
					</form>
				{% endif %}

			</div>
		</div>
	</div>


</main>{% endblock %}
