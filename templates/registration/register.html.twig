{% extends 'base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('styles/registration.css') }}">
{% endblock %}
{% block title %}S'enregistrer
{% endblock %}

{% block body %}
	<div class="containerConnexion">
		<h2 class="titreConnexion">S'enregistrer</h2>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.username) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

		<button class="boutonConnexion" type="submit">S'enregistrer</button>
		{{ form_end(registrationForm) }}
		<p class="sousTexteConnexion">Déjà un compte ? -</p>
		<a href="{{ path('app_login') }}">
			<p class="sousTexteConnexion">Se connecter
			</p>
		</a>
	</div>
{% endblock %}
